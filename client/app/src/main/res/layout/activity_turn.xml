<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/fragmentMargin"
        android:layout_marginEnd="@dimen/fragmentMargin"
        android:layout_marginTop="@dimen/fragmentMargin"
        android:layout_marginBottom="@dimen/fragmentMargin"
        tools:context=".activity.TurnActivity">

    <TextView
            android:id="@+id/mapText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="World Map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/world_image_view"
    />

    <ImageView
            android:id="@+id/world_image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mapText"
            app:srcCompat="@android:drawable/ic_menu_mapmode"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/terrInfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/world_image_view"
            app:layout_constraintBottom_toTopOf="@id/noticeInfo"/>

    <TextView
            android:id="@+id/noticeInfo"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/border"
            android:text="Instructions info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playerInfo"
            app:layout_constraintTop_toBottomOf="@id/terrInfo"
            app:layout_constraintBottom_toTopOf="@id/chooseAction"
    />
    <TextView
            android:id="@+id/playerInfo"
            android:layout_width="90dp" android:layout_height="150dp"
            android:background="@drawable/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/noticeInfo"
            app:layout_constraintTop_toTopOf="@id/noticeInfo"
            android:text="@string/PLAYERINFO"
            app:layout_constraintBottom_toBottomOf="@id/noticeInfo"
    />

    <Spinner
            android:id="@+id/actions_spinner"
            android:layout_width="300dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noticeInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chooseAction"
    />

    <Button
            android:id="@+id/chooseAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/COMMIT"
            app:layout_constraintStart_toEndOf="@id/actions_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noticeInfo"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>