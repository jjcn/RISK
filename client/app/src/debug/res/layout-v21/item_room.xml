<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/greyBorder"
              android:layout_marginStart="@dimen/fragmentMargin"
              android:layout_marginEnd="@dimen/fragmentMargin"
              android:layout_marginTop="@dimen/fragmentMargin"
              android:orientation="vertical"
              android:clickable="true">

    <TextView
            android:id="@+id/roomIDTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ID_INSTRU"
    />

    <TextView
            android:id="@+id/playerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ROOMINFO"
    />

</LinearLayout>